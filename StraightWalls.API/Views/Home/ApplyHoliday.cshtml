@using StraightWalls.API.ViewModel
@model HolidayViewModel
@{
    ViewBag.Title = "ApplyHoliday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("HolidayRequest", "Home", FormMethod.Post, new { @class = "form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
        <h1 class="h2">Apply Holiday</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.From, new { @class = "col-md-2 lable-control" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.From, new { @class = "form-control", placeholder = "From Date",style="margin-bottom:5px" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.To, new { @class = "col-md-2 lable-control" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.To, new { @class = "form-control", placeholder = "To Date", style = "margin-bottom:5px" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <input type="submit" value="Submit" class="btn btn-lg btn-dark btn-block" />
                </div>
            </div>
        }
    </div>
</div>

